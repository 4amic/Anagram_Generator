
  <form action="<%= words_form_action(@word) %>" method="post" >
    <input type="hidden" name="_method" value="<%= words_form_method(@word) %>">
    

      <div>
        <input class="form-control" type="text" name="text" value="<%= @word.text %>" />
      </div>

 
      <div>
        <input type="submit" class="button" value="Submit" >
          
      </div>

       	<% if @error.present? %>
 		<p class='error'><%= "#{@error}" %></p>
 	  <% end %>
      
  </form>